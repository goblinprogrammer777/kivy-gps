<LoginScreen>:
    MDTextField:
        id: username
        hint_text: "Username"
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        font_size: 20
        mode: "rectangle"
    MDTextField:
        id: password
        hint_text: "Password"
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        font_size: 20
        mode: "rectangle"
    MDRaisedButton:
        text: "LOG IN"
        font_size: 17
        pos_hint: {"center_x": 0.5, "center_y": 0.25}
        size_hint: (0.5, 0.05)
        on_press: self.parent.login()
    MDTextButton:
        text: "You dont have account? Register now!"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        on_press: root.manager.current = 'signup'