
<LoginScreen>:
    MDFillRoundFlatButton:
        text:"Войти"
        font_size:30
        pos_hint:{"center_x":0.5, "center_y":0.5}
        on_press:self.parent.login()

    MDTextField:
        id:username_field
        hint_text:"Username"
        pos_hint:{"center_x":0.5, "center_y":0.8}
        size_hint:(0.5, 0.1)

    MDTextField:
        id:password_field
        hint_text:"Password"
        pos_hint:{"center_x":0.5, "center_y":0.65}
        required: True
        password: True
        password_mask: "*"
        size_hint:(0.2, 0.1)
