<SignupScreen>:
    MDTextField:
        id: username
        hint_text: "username"
        pos_hint: {"center_x": 0.5, "center_y":0.7}
        size_hint: (0.5, 0.1)
        mode: "rectangle"
    MDTextField:
        id: password
        hint_text: "password"
        pos_hint: {"center_x": 0.5, "center_y":0.6}
        size_hint: (0.5, 0.1)
        mode: "rectangle"
    MDTextField:
        id: email
        hint_text: "e-mail"
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        size_hint: (0.5, 0.1)
        mode: "rectangle"
    MDRaisedButton:
        text: "Register!"
        pos_hint: {"center_x": 0.5, "center_y": 0.3}
        font_size: 17
        size_hint: (0.5, 0.05)
        on_press: self.parent.signup()
    MDTextButton:
        text: "Back to login"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        on_press: root.manager.current = 'login'